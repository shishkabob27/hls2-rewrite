@using Sandbox;
@using Sandbox.UI;
@using Sandbox.UI.Construct; 
@using System;
@namespace HLS2

<root>
	<panel class="iconcontainer">
		<IconPanel style="height: @(100 - (Game.LocalPawn as Player).Suit)" class="iconempty"></IconPanel>
		<IconPanel style="height: @((Game.LocalPawn as Player).Suit)" class="iconfull"></IconPanel>
	</panel>
    
	@((Game.LocalPawn as Player).Suit.CeilToInt())
</root>

@code {
	protected override int BuildHash()
	{
		return HashCode.Combine((Game.LocalPawn as Player).Suit);
	}
}